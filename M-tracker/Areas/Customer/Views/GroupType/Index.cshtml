@model GroupType


<div class="container" style="margin-top:5%">
    <div class="row">
        <div class="col-6" style="float:none;margin:auto"><h2>Manage Group Types</h2></div>
    </div>
            <div class="row">
            <div class="col-12 text-end">

                <a onclick="showInPopup('@Url.Action("CreateGroup","GroupType",null,Context.Request.Scheme)','New Group')" class="btn btn-success text-primary" style="font-weight:bold" >
                    <i class="bi bi-plus-circle"></i> &nbsp; Create Group
                </a>

            </div>
        </div>

    <div class="row" style="margin-top:5%">
        <table id="tblGroup" class="table table-bordered table-striped" style="width:100%">
            <thead>
              <tr>
                  <th>Type</th>
                  <th>Description</th>
                  <th>Created Date</th>
                  <th></th>
              </tr>
</thead>
        </table>
    </div>
</div>


    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>

                </div>
                <div class="modal-body">
                        <p id="commentdesc"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


@section scripts
{
    <script src="~/js/GroupTypes.js"></script>
}
