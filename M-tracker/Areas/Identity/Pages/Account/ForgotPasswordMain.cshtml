@page
@model ForgotPasswordModel
@{
    Layout = null;
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">

</head>

    <body class="img js-fullheight" style="background-image: url('/images/login.jpg');">
    <section class="ftco-section">
            <form method="post">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                        <h2 class="heading-section">Password Reset For User</h2>
                    </div>
                </div>
                <div class="row justify-content-center" style="margin-top:5%">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input  asp-for="Input.Email" class="form-control" placeholder="Email" required>
                                       <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button id="registerSubmit" type="submit" class="form-control btn  submit px-3" style="background-color:black">RESET PASSWORD</button>
                            </div>

                            <p class="w-100 text-center">&mdash; M-Tracker &mdash;</p>

                                         <div class="form-group">
                               <a  class="form-control btn   px-3" asp-page="./LoginMain" asp-route-returnUrl="@Model.ReturnUrl" style="background-color:black"></> SIGN IN</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/popper.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/main.js"></script>
<partial name="_ValidationScriptsPartial" />
}
